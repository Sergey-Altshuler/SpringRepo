<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <util:list id="studentList">
        <bean class="com.example.springht.model.Student" p:name="Name1" p:surname="Surname1" p:avgMark="4.0"
              p:subjects-ref="subjects"/>
        <bean class="com.example.springht.model.Student" p:name="Name2" p:surname="Surname2" p:avgMark="4.5"
              p:subjects-ref="subjects"/>
        <bean class="com.example.springht.model.Student" p:name="Name3" p:surname="Surname3" p:avgMark="5.0"
              p:subjects-ref="subjects"/>
        <bean class="com.example.springht.model.Student" p:name="Name4" p:surname="Surname4" p:avgMark="5.5"
              p:subjects-ref="subjects"/>
        <bean class="com.example.springht.model.Student" p:name="Name5" p:surname="Surname5" p:avgMark="6.0"
              p:subjects-ref="subjects"/>
        <bean class="com.example.springht.model.Student" p:name="Name6" p:surname="Surname6" p:avgMark="6.5"
              p:subjects-ref="subjects"/>
    </util:list>
    <util:list id="subjects">
        <value>Subject1</value>
        <value>Subject2</value>
        <value>Subject3</value>
        <value>Subject4</value>
    </util:list>
    <bean id="courseMore5" class="com.example.springht.model.Course"
          p:title="courseMore5" p:students="#{studentList.?[avgMark gt 5.0]}">
    </bean>
    <bean id="courseLess5" class="com.example.springht.model.Course"
          p:title="courseLess5" p:students="#{studentList.?[avgMark lt 5.0]}">
    </bean>
    <bean id="courseMax" class="com.example.springht.model.Course"
          p:title="courseMax" p:students="#{T(java.util.Collections).max(studentList)}">
    </bean>
    <bean id="courseMin" class="com.example.springht.model.Course"
          p:title="courseMin" p:students="#{T(java.util.Collections).min(studentList)}">
    </bean>
</beans>