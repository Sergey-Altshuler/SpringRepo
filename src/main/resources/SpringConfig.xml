<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
    <bean name="sendService" class="com.example.springht.SendService" p:message="Сообщение">

    </bean>
    <bean name="aspect" class="com.example.springht.Aspect"/>
    <aop:config>
        <aop:aspect ref="aspect">
            <aop:before pointcut="execution(* com.example.springht.SendService.send())"
                        method="before"/>
            <aop:after pointcut="execution(* com.example.springht.SendService.send())"
                       method="after"/>
            <aop:after-throwing method="throwExc"
                                pointcut="execution(* com.example.springht.SendService.sendException())"/>

        </aop:aspect>

    </aop:config>
</beans>